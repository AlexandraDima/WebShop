@model MbmStore.ViewModels.Cart
<!--The view displays the number of items in the cart, the total cost of those items and a link to the Checkout button-->
<div class="navbar-right" style="padding-right:20px"> 
    @Html.ActionLink("Checkout", "Index", "Cart",
    new { returnUrl = Request.Url.PathAndQuery }, 
    new { @class = "btn btn-default navbar-btn" }) 
</div> 
<div class="navbar-text navbar-right" style="padding-right:20px"> 
    <b>Your cart:</b> 
    @Model.Lines.Sum(x => x.Quantity) item(s), 
    @Model.TotalPrice.ToString("n") 
</div>
